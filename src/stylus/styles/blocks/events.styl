#events
  width 100%
  min-height 1349px
  background-images('~/images/events/background.jpg', 969px, 50% 335px)
  .block-icon
    background-image url('~/images/events/icon.png')

  .shadow-box
    width 96%
    max-width 1110px
    box-sizing border-box
    padding 0 20px 20px
    margin 50px auto 0
    background-color $black-90
    box-shadow 0 0 40px 20px $black
    .icon
      size 142px
      margin-right 30px
      float left
      background-image url('~/images/events/twitch.png')
      background-size 142px
      background-position 50%
      background-repeat no-repeat
      +media-query(all, max-width 860px)
        display none

  .lined-wrap
    +media-query(all, max-width 460px)
      .line
        display none

  .subscribe-heading
  .subscribe-subheading
    font-size 23px
    line-height 30px
    text-align center
    color $text-first-color
  .subscribe-heading
    padding 15px 45px 5px
    text-transform uppercase
    transition all 0.2s linear
    strong
      color $white
      font-weight 400
    +media-query(all, max-width 580px)
      padding 15px 20px 5px
    +media-query(all, max-width 460px)
      margin auto
      &:before
      &:after
        display none
  .subscribe-subheading
    max-width 600px
    margin auto

  .widgets
    margin-top 40px
    +media-query(all, max-width 1140px)
      text-align center
      text-align-last center

  .widget
    width 340px
    padding 20px 0 30px
    border-top 1px solid $light-border-color
    +media-query(all, max-width 1140px)
      display block
      margin auto
    +media-query(all, max-width 400px)
      width 96%
      overflow hidden
    .title
      margin-bottom 25px
      font-size 30px
      font-weight bold
      text-align center
      text-transform uppercase
      color $title-color
    .event-container
      size 100% 200px
      font-size 0